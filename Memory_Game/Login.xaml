<Window x:Class="Memory_Game.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_Game"
        mc:Ignorable="d"
        Title="Login" Height="197.535" Width="262.013">
    <Grid x:Name="frmLogin" Background="#FFBFBFBF">
        <Button x:Name="btnLogin" Content="Connexion" HorizontalAlignment="Left" Margin="74,122,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click"/>
        <Button x:Name="btnCancel" Content="Annuler" HorizontalAlignment="Left" Margin="154,122,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <TextBlock x:Name="txtUser" HorizontalAlignment="Left" Height="19" Margin="10,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" Background="White"/>
        <Label x:Name="lblUser" Content="Utilisateur" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="107" Height="25"/>
        <Label x:Name="lblPassword" Content="Mot de passe" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.53,-0.491"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="19" Margin="10,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219"/>

    </Grid>
</Window>
